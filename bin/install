#!/usr/bin/bash

# ---------------------------------
# Setup
# ---------------------------------

JARVIS="$HOME/Development/personal/jarvis"
LOCK_FILE="$HOME/jarvis.lock"
NIX_PROFILE="$HOME/.nix-profile/etc/profile.d/nix.sh"
SSH="$HOME/.ssh"

# Obs, bail out
set -e

# Printers
info() {
  echo -e "\r[ \033[00;34m!!\033[0m ] $1"
}

success() {
  echo -e "\r\033[2K[ \033[00;32mOK\033[0m ] $1"
}

warning() {
  echo -e "\r[ \033[00;33m..\033[0m ] $1"
}

# Teehee!
repoop() {
  sudo reboot
}

# Helpers
has_nix() {
  command -v nix &>/dev/null
}

has_lock() {
  [ -f "$LOCK_FILE" ]
}

# Funk soul brother
install_requirements() {
  info "Configure environment!"
  warning "Setting up requirements..."

  # Create nix stuff
  sudo mkdir -p /System/Volumes/Data/opt/nix
  sudo chown "$(whoami)" /System/Volumes/Data/opt/nix
  sudo sh -c "echo 'nix System/Volumes/Data/opt/nix' >> /etc/synthetic.conf"

  export NIX_IGNORE_SYMLINK_STORE=1

  cat << EOF > "$HOME/.zprofile"
if [ -f "$NIX_PROFILE" ]; then
  . "$NIX_PROFILE"
  export NIX_IGNORE_SYMLINK_STORE=1
fi
EOF

  # Add lock file
  touch "$LOCK_FILE"

  info "All done! Repoop."
  repoop
}

install_nix() {
  if ! has_nix && ! has_lock; then
    install_requirements
  else
    rm -f "$LOCK_FILE"
    info "Nixify this bad boy!"

    if has_nix; then
      warning "Nix already installed. Checking for updates..."
      printf "\n"
  
      nix-channel --update
  
      printf "\n"
      success "Nix updated successfully!"
    else
      warning "No Nix found!"
      info "Installing nix..."
      printf "\n"
  
      curl -L https://nixos.org/nix/install | sh
      exec zsh
  
      printf "\n"
      success "Nix installed successfully!"
    fi
  fi
}

install_dotfiles() {
  info "Bring in the big guns!"

  mkdir -p "$JARVIS"

  warning "Downloading files..."
  printf "\n"

  nix-shell -p git --run \
    "git clone https://github.com/ildx/jarvis.git \"$JARVIS\"; \
    git -C \"$JARVIS\" remote set-url origin git@github.com:ildx/jarvis.git"

  printf "\n"
  success "Dotfiles downloaded successfully!"
}

add_keys() {
  info "Handover keys to the kingdom"

  if ! [[ -f "$SSH/authorized_keys" ]]; then
    printf "\n"
    mkdir -p "$SSH"
    ssh-keygen -t ed25519 -C "iivari.leinonen@gmail.com" -f "$SSH/id.personal"
    cat "$SSH/id.personal.pub" >> "$SSH/authorized_keys"
    eval "$(ssh-agent -s)"
    cat << EOF >> "$SSH/config"
Github
Host github.com
  AddKeysToAgent yes
  IdentityFile $SSH/id.personal
  IgnoreUnknown UseKeychain
EOF
    ssh-add "$SSH/id.personal"

    printf "\n"
    success "SSH keys generated successfully!"
  else
    success "SSH keys already generated, skipping..."
  fi
}

install_flakes() {
  info "Let is snow, let it snow, let is snow!"
  printf "\n"

  nix run nix-darwin --extra-experimental-features "nix-command flakes" -- switch --flake "$JARVIS/nix#hal"

  printf "\n"
  success "Flakes sprinkled aroung!"
}

link_files() {
  info "Link dotfiles"
  printf "\n"

  stow --dir=$JARVIS/config --target=$HOME

  printf "\n"
  success "Dotfiles in place!"
}

# ---------------------------------
# Let us begin
# ---------------------------------

# Supa-dupa-fly
sudo -v

# Go home, and start fresh
cd && clear

# Be polite!
if ! has_nix; then
  echo "Hello $(whoami)! Let's get you set up."
else
  echo "Welcome back $(whoami)! Let's continue."
fi

printf "\n"

# Nix
install_nix
printf "\n"

# Dotfiles
install_dotfiles
printf "\n"

# SSH
add_keys
printf "\n"

# Flakes
install_flakes
printf "\n"

# Stow
link_files
printf "\n"

success "All good in the hood!"

# ---------------------------------
# Create file system 
# ---------------------------------

#info "Build a place to call home"
#printf "\n"

#DIR=(
#  "$HOME/Archives"
#  "$HOME/Pictures/Screenshots"
#)

#for dir in "${DIR[@]}"; do
#  if [ -d "$dir" ]; then
#    warning "Directory $dir already exists, skipping..."
#  else
#    mkdir -p "$dir"
#    info "Directory $dir created successfully!"
#  fi
#done

#printf "\n"
#success "A new ecosystem is in place!"

#printf "\n"

# ---------------------------------
# Aftermath
# ---------------------------------

#info "Remember to add ssh key to github (pbcopy < path_to_key)"
#printf "\n"
