#!/usr/bin/bash

# ---------------------------------
# Setup
# ---------------------------------

# Obs, bail out
set -e

# Teehee!
repoop() {
  sudo reboot
}

# The truth is out here
has_requirements() {
  command -v nix &>/dev/null || [ -f /tmp/jarvis.install ]
}

# Printers
info() {
  echo -e "\r[ \033[00;34m!!\033[0m ] $1"
}

success() {
  echo -e "\r\033[2K[ \033[00;32mOK\033[0m ] $1"
}

warning() {
  echo -e "\r[ \033[00;33m..\033[0m ] $1"
}

# ---------------------------------
# Let's begin
# ---------------------------------

# Supa-dupa-fly
sudo -v

# Go home, and start fresh
cd && clear

# Be polite!
if ! has_requirements; then
  echo "Hello $(whoami)! Let's get you set up."
else
  echo "Welcome back $(whoami)! Let's continue."
fi

printf "\n"

# ---------------------------------
# B.C.
# ---------------------------------

# File vault is meh and kills nix install so we must do some manual work :P

CRON="@reboot bash -c '$(curl -fsSL https://raw.githubusercontent.com/ildx/jarvis/main/bin/install)'"

# If nix is not installed and no jarvis in tmp...
if ! has_requirements; then

  warning "Setting up requirements..."

  # Create nix stuff
  sudo mkdir -p /System/Volumes/Data/opt/nix
  sudo chown ildx /System/Volumes/Data/opt/nix
  sudo sh -c "echo 'nix\tSystem/Volumes/Data/opt/nix' >> /etc/synthetic.conf"

  export NIX_IGNORE_SYMLINK_STORE=1

  cat << 'EOF' > "$HOME/.zprofile"
if [ -f "$HOME/.nix-profile/etc/profile.d/nix.sh" ]; then
  . "$HOME/.nix-profile/etc/profile.d/nix.sh"
  export NIX_IGNORE_SYMLINK_STORE=1
fi
EOF

  # Set a temporary marker that we were here...
  mkdir -p "$HOME/tmp"
  touch "$HOME/tmp/jarvis.install"

  # Add a cron job, so we can continue where we left off...
  (crontab -l 2>/dev/null; echo "$CRON") | crontab -

  info "All done! Repoop."
  repoop
else
  # We came back from the dead, so no need to keep cron around
  warning "Running cleanup..."
  crontab -l | grep -vF "$CRON" | crontab -
  rm -f "$HOME/tmp/jarvis.install"
  info "Cleaned up completed!"
fi

printf "\n"

# ---------------------------------
# Install Nix
# ---------------------------------

info "Nixify this bad boy!"
printf "\n"

if command -v nix &>/dev/null; then
  warning "Nix already installed. Checking for updates..."
  printf "\n"

  nix-channel --update

  printf "\n"
  success "Nix updated successfully!"
else
  warning "No Nix found!"
  printf "\n"

  warning "Install nix..."

  curl -L https://nixos.org/nix/install | sh
  exec zsh

  printf "\n"
  success "Nix installed successfully!"
fi

printf "\n"

# ---------------------------------
# Get dotfiles
# ---------------------------------

#info "Bring in the big guns"
#printf "\n"

